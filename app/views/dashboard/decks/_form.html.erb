<%= simple_form_for @deck, html: { class: 'form-horizontal'},
  wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :current, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.submit :class => 'btn btn-primary' %>
  <%= link_to t(:back), decks_path, :class => 'btn btn-primary' %>

<% end %>
