<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section id="container">
      <header class="clearfix">
        <h1>Флэшкарточкер</h1>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <!-- Think about design <li>Вы вошли как <%= current_user.email %></li> -->
              <li><%= link_to "Профиль", edit_user_path(current_user.id) %></li>
              <li><%= link_to "Выйти", logout_path, method: :post %></li>
              <li><%= link_to 'Все карточки', cards_path %></li>
              <li><%= link_to 'Добавить карточку', new_card_path %></li>
            <% else %>
              <li><%= link_to "Зарегистрироваться", signup_path %></li>
              <li><%= link_to "Войти", login_path %></li>
            <% end %>
          </ul>
        </div>
      </header>
      <div class="bs-docs-example">
        <p class="text-error"><%= flash[:error] %></p>
        <p class="text-warning"><%= flash[:notice] %></p>
        <p class="text-success"><%= flash[:success] %></p>
      </div>
      <section><%= yield %></section>
    </section>
  </body>
</html>
