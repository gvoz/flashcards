<h2>Список колод</h2>
<table class="table table-hover">
  <thead><tr>
    <th>Наименование</th>
    <th>Описание</th>
  </tr></thead>

  <tbody><% @decks.each do |deck| %>
    <tr>
      <td><%= deck.name %></td>
      <td><%= deck.description %></td>
      <td><% if deck.current %>Текущая колода<% end %></td>
      <td><%= link_to 'Показать', deck_path(deck) %></td>
      <td><%= link_to 'Редактировать', edit_deck_path(deck) %></td>
      <td><%= link_to 'Удалить', deck_path(deck),
                    method: :delete,
                        data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %></tbody>
</table>
