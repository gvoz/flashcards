<div class="row-fluid">
  <div class="span5"><%= image_tag @card.image_url if @card.image? %></div>
  <div class="span7">
    <p>
      <strong><%= t('.original_text') %>:</strong>
      <%= @card.original_text %>
    </p>
    <p>
      <strong><%= t('.translated_text') %>:</strong>
      <%= @card.translated_text %>
    </p>
    <p>
      <strong><%= t('.review_date') %>:</strong>
      <%= @card.review_date.strftime("%d/%m/%Y") %>
    </p>
  </div>
</div>
<%= link_to t(:back), deck_path(@deck), :class => 'btn btn-primary' %>
