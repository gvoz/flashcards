<div class="row-fluid">
  <div class="span5"><%= image_tag @card.image_url if @card.image? %></div>
  <div class="span7">
    <p>
      <strong>Оригинальный текст:</strong>
      <%= @card.original_text %>
    </p>
    <p>
      <strong>Перевод текста:</strong>
      <%= @card.translated_text %>
    </p>
    <p>
      <strong>Дата пересмотра:</strong>
      <%= @card.review_date.strftime("%d/%m/%Y") %>
    </p>
  </div>
</div>
