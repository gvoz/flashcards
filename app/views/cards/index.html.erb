<h2>Список карточек</h2>
<table class="table table-hover">
  <thead><tr>
    <th>Оригинальный текст</th>
    <th>Перевод текста</th>
    <th>Дата пересмотра</th>
  </tr></thead>

  <tbody><% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td><%= link_to 'Показать', card_path(card) %></td>
      <td><%= link_to 'Редактировать', edit_card_path(card) %></td>
      <td><%= link_to 'Удалить', card_path(card),
                    method: :delete,
                        data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %></tbody>
</table>
