<h1><%= t(:login) %></h1>
<%= form_tag user_sessions_path do %>
  <div class="form-group text required card_original_text">
    <%= label_tag :email, t(:email), class: "text required col-sm-3 control-label" %>
    <div class="col-sm-9"><%= text_field_tag :email, params[:email], class: "text required form-control" %></div>
  </div>
  <div class="form-group text required card_original_text">
    <%= label_tag :password, t(:password), class: "text required col-sm-3 control-label" %>
    <div class="col-sm-9"><%= password_field_tag :password, '', class: "text required form-control" %></div>
  </div>
  <div class="col-sm-offset-3 col-sm-9">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me, t(:remember_me) %>
  </div>
  <div class="actions"><%= submit_tag t(:login) %></div>
<% end %>
